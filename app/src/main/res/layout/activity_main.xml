<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#938A8A"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="135dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="204dp"
                android:layout_height="155dp"
                app:srcCompat="@drawable/index" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:background="#FFFFFF"
                android:paddingLeft="95sp"
                android:text="Wings Of Fire"
                android:textColor="#0E0D0D"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="241dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="339dp"
            android:layout_height="85dp"
            android:background="#7E6F6F"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name:Prerana R Shetty"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#E1D5D5"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="232dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="249dp"
            android:layout_height="47dp"
            android:background="#7E6F6F"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Position:General Manager"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="249dp"
            android:layout_height="49dp"
            android:background="#7E6F6F"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email:prerana@gmail.com"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="380dp" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="247dp"
            android:layout_height="48dp"
            android:background="#7E6F6F"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Contact:9591264350"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="439dp" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="248dp"
            android:layout_height="57dp"
            android:background="#7E6F6F"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Website:www.wingsofire.com"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="496dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>